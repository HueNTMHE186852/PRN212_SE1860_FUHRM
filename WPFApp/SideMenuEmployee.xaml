<UserControl x:Class="WPFApp.SideMenuEmployee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="200">
    <StackPanel Background="#4A90E2" VerticalAlignment="Stretch" Margin="0">
        <TextBlock Text="{Binding CurrentWindowName}" FontSize="20" FontWeight="Bold" Foreground="#FFFFFF" Height="28" Width="186"/>
        <Button Content="Home" Foreground="#FFFFFF" Background="Transparent" Click="NavigateButton_Click"/>
        <Button Content="Take Attendance" Foreground="#FFFFFF" Background="Transparent" Click="NavigateButton_Click"/>
        <Button Content="Notifications" Foreground="#FFFFFF" Background="Transparent" Click="NavigateButton_Click"/>
    </StackPanel>
</UserControl>
